{
	"name": "api-template",
	"version": "1.0.0",
	"description": "Our template for Express and TypeScript based Services.",
	"main": "dist/index.js",
	"scripts": {
		"prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
		"build": "tsc",
		"prestart": "npm run build",
		"start": "node .",
		"test": "jest --maxWorkers=1 --coverage --testTimeout=10000 --detectOpenHandles",
		"prepare": "husky install"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Fableverse/api-template.git"
	},
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/Fableverse/api-template/issues"
	},
	"homepage": "https://github.com/Fableverse/api-template#readme",
	"dependencies": {
		"@types/body-parser": "^1.19.2",
		"body-parser": "^1.20.0",
		"cors": "^2.8.5",
		"dotenv": "^16.0.0",
		"express": "^4.17.3",
		"mongoose": "^6.3.1",
		"morgan": "^1.10.0",
		"ts-jest": "^27.1.4",
		"ts-node": "^10.7.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.2.4",
		"@commitlint/config-conventional": "^16.2.1",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/jest": "^27.4.1",
		"@types/morgan": "^1.9.3",
		"@types/node": "^17.0.25",
		"husky": "^7.0.0",
		"jest": "^27.5.1",
		"lint-staged": "^12.3.8",
		"prettier": "2.6.2",
		"tslint": "^6.1.3",
		"typescript": "^4.6.3"
	},
	"lint-staged": {
		"**/*": "prettier --write --ignore-unknown",
		"*.{js,css,md,ts,tsx}": "prettier --write"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	}
}
